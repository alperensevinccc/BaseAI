"""
This module processes intents for the BaseAI application.

ERROR: Missing required config: GEMINI_API_KEY
"""

import os
from typing import Any, Dict, Optional


def get_api_key() -> Optional[str]:
    """
    Retrieves the GEMINI API key from the environment variables.

    Returns:
        Optional[str]: The GEMINI API key if it exists, otherwise None.
    """
    return os.getenv('GEMINI_API_KEY')


def process_intent(intent: Dict[str, Any]) -> str:
    """
    Processes the given intent and returns a response string.

    Args:
        intent (Dict[str, Any]): The intent to process.

    Returns:
        str: The response based on the provided intent.
    """
    api_key = get_api_key()
    if api_key is None:
        raise ValueError("GEMINI_API_KEY is missing. Please set it in the environment.")
    # Dummy processing logic for the sake of example.
    response = f'Processed intent: {intent.get("name", "unknown")}'
    return response
