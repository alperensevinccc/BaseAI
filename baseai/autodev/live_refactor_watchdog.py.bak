def get_gemini_api_key() -> Optional[str]:
    """
    Get the Gemini API key from the environment variables.

    Returns:
        Optional[str]: The API key if set, else None.
    """
    return os.getenv('GEMINI_API_KEY')


def validate_environment() -> None:
    """
