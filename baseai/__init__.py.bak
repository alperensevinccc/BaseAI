"""
ERROR: Missing required config: GEMINI_API_KEY
"""

import os
from typing import Optional


def get_gemini_api_key() -> Optional[str]:
    """
    Retrieves the GEMINI_API_KEY from the environment variables.
    
    Returns:
        Optional[str]: The GEMINI_API_KEY if set, otherwise None.
    """
    return os.getenv('GEMINI_API_KEY')


def validate_config() -> None:
    """
    Validates the required configuration for the application.
    
    Raises:
        ValueError: If GEMINI_API_KEY is missing.
    """
    if not get_gemini_api_key():
        raise ValueError("ERROR: Missing required config: GEMINI_API_KEY")


validate_config()